#!/usr/bin/env php
<?php

require __DIR__ . '/vendor/autoload.php';

// --------------------------------------------------
// Boot WASF Framework (timezone, config, helpers, DB, auth)
// --------------------------------------------------
$app = require __DIR__ . '/bootstrap/app.php';

// --------------------------------------------------
// Run console kernel
// --------------------------------------------------
$kernel = new \Wasf\Console\Kernel($app);

$argv = $_SERVER['argv'];
array_shift($argv); // remove "php"
$cmd = array_shift($argv) ?? 'help';

$kernel->handle($cmd, $argv);
